extends _bootstrap
append styles
  // Custom styles for this template 
  link(href='../stylesheets/signup.css', rel='stylesheet')
block body
  div(style='background-image: url(../images/Grey.jpg);')
    a(href="http://localhost:3000/home") Go back Home
    .container
      .row
          .col-xs-12.col-sm-8.col-md-6.col-sm-offset-2.col-md-offset-3
            form(action='/adduser' method='post')
              h2
                | Please Sign Up 
                small It&apos;s free and always will be.
              |         
              hr.colorgraph
              .form-group
                  input#first_name.form-control.input-lg(type='text', name='user_name', placeholder='User Name', tabindex='1')
              
            
              .form-group
                input#email.form-control.input-lg(type='email', name='email', placeholder='Email Address', tabindex='4')
              |         
              .row
                .col-xs-6.col-sm-6.col-md-6
                  .form-group
                    input#password.form-control.input-lg(type='password', name='password', placeholder='Password', tabindex='5')
                |           
                .col-xs-6.col-sm-6.col-md-6
                  .form-group
                    input#password_confirmation.form-control.input-lg(type='password', name='password_confirmation', placeholder='Confirm Password', tabindex='6')
            
              |         
              hr.colorgraph
              |         
              input.btn.btn-primary.btn-block.btn-lg(type='submit', value='Register', tabindex='7')
            